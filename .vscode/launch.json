            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Test API",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/test_api.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "ðŸš€ Complete Microservice",
